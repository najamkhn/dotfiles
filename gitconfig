[user]
	name    = Najam Khan
	email   = najamkhn@gmail.com

[core]
	filemode = false
	bare = false
	logallrefupdates = true
	ignorecase = true
	autocrlf = input
	safecrlf = true

[alias]
	co      = checkout
	st      = status
	ci      = commit
	br      = branch
	type    = cat-file -t
	dump    = cat-file -p
	graph   = log --graph
	lg    	= log --graph --pretty=oneline --abbrev-commit --decorate
	lg-med	= log --format='medium' --decorate
	hist    = log --pretty=format:\"%h %ad | [%an] -> %s%d\" --date=short

[branch]
	autosetuprebase = always

[format]
	pretty	= oneline
	branch  = auto
	diff    = auto
	pager   = true
	status  = auto
    
[color]
	ui = true

[push]
	default = current

[apply]
	whitespace = fix